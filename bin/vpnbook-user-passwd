#!/bin/bash

PASSWD_FILE="vpnbook-password.txt"
password=$(curl -sSL https://www.vpnbook.com/freevpn    |
 	       awk '/Password:/{print $3}' | head -1 | sed 's/src="//g')

#username=$(/usr/bin/ftp -VM -o- https://www.vpnbook.com/freevpn | /usr/bin/sed -e 's/<[^>]*>//g' |
#           /usr/bin/awk '/Username:/{print $2}' | /usr/bin/tail -1)

test -f $HOME/code/"${PASSWD_FILE}"  && rm -v  $HOME/code/"${PASSWD_FILE}"

if [[ ! -d "$TMPDIR" ]]; then
  export TMPDIR="/tmp/$LOGNAME"
  mkdir -p -m 700 "$TMPDIR"
fi

cd -- $TMPDIR
wget -O passwd.php https://www.vpnbook.com/"$password"
tesseract -l eng passwd.php password
echo "\
vpnbook
`cat password.txt`" >$HOME/code/"${PASSWD_FILE}"
