
#!/bin/bash

tmux new-session -d -n 'irc' 'irssi && zsh'
tmux new-window -n 'mail' 'mutt && zsh'
tmux new-window -n 'tcpdump' 'doas /usr/bin/grc /usr/bin/tcpdump -i wlan0 && zsh'
tmux split-window -v -l 5 'riseup-vpn && zsh'
tmux select-pane -t 1
tmux new-window -n 'keychain' '$HOME/bin/keychain-start && zsh'
tmux new-window -n 'vpn-tor' 'zsh'
tmux split-window -h 'zsh'
tmux select-pane -t 0
tmux new-window -n 'music' 'cmus && zsh'
tmux new-window -n 'torrent' 'rtorrent && zsh'
tmux select-window -t 4
