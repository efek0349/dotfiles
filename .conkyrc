#!/bin/ksh

out_to_console yes
out_to_x no
background no
update_interval 1
total_run_times 0

TEXT
 printf "^fg(\#00ffff)^bg(\#1c1c1c) ^i(.dzen-icons/mail.xbm) %s " '${exec $HOME/bin/mail_status}'
