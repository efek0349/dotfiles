 printf "^fg(\#aa44ff)^bg(\#282a2e) ^i(.dzen-icons/spkr_01.xbm) %-5s" '${exec /usr/local/bin/vols.sh}%'
 printf "^fg(\#ff2400)^bg(\#1c1c1c) ^i(.dzen-icons/bat_empty_01.xbm) %s" '${exec apm -l}%'
